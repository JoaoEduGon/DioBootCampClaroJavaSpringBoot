
public class TelegamMensegem {
	
	public void enviarMensagem() {
		validarConectadoInternet();
		System.out.println("Enviar mensagem Telegram");
		salvarHistoricoMensagem();
	}
	
	public void receberMensagem() {
		System.out.println("Receber mensagem");
	}
	
	private void validarConectadoInternet() {
		System.out.println("Validar se está conectado a internet");
	}
	private void salvarHistoricoMensagem() {
		System.out.println("Salvando o histórico de mensagem");
	}
	

}
